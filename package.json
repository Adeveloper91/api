{
  "name": "xbrowsersync-api",
  "description": "The REST API service component of the xBrowserSync application.",
  "version": "0.1.0",
  "author": "Rich Browne",
  "license": "MIT",
  "main": "api.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/xBrowserSync/API.git"
  },
  "bugs": {
    "url": "https://github.com/xBrowserSync/API/issues"
  },
  "dependencies": {
    "bunyan": "1.8.x",
    "mongojs": "2.4.x",
    "node-uuid": "1.4.x",
    "q": "1.4.x",
    "restify": "4.0.x",
    "request": "2.73.x"
  },
  "devDependencies": {
    "jshint": "2.9.x",
    "node-sass": "3.7.x",
    "minifier": "0.8.x"
  },
  "engine": "node >= 0.10.45",
  "scripts": {
    "test": "npm run lint",
    "lint": "jshint .",

    "build": "npm run compilecss",
    "compilecss": "node-sass docs/css/styles.scss docs/css/styles.css -q",
    "postcompilecss": "npm run minifycss",
    "minifycss": "minify --output docs/css/styles.min.css docs/css/styles.css",
    "postminifycss": "npm run bundlejs",
    "bundlejs": "minify --output docs/js/scripts.min.js docs/js/init.js"
  }
}
