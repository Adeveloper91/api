{
  "name": "xbrowsersync-api",
  "description": "The REST API service component of the xBrowserSync application.",
  "version": "1.1.0",
  "author": "xBrowserSync",
  "license": "MIT",
  "main": "dist/api.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/xBrowserSync/API.git"
  },
  "bugs": {
    "url": "https://github.com/xBrowserSync/API/issues"
  },
  "dependencies": {
    "bootstrap": "3.3.x",
    "bunyan": "^1.8.12",
    "core-decorators": "^0.20.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-rate-limit": "^2.11.0",
    "express-routes-versioning": "^1.0.1",
    "helmet": "^3.12.0",
    "jquery": "3.1.x",
    "jquery-easing": "0.0.x",
    "mkdirp": "^0.5.1",
    "moment": "https://registry.npmjs.org/moment/-/moment-2.21.0.tgz",
    "mongojs": "^2.5.0",
    "mongoose": "^5.0.11",
    "mongoose-uuid2": "^2.1.0",
    "node-uuid": "1.4.x"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/express-rate-limit": "^2.9.3",
    "@types/helmet": "0.0.37",
    "@types/mongoose": "^5.0.7",
    "@types/node": "^9.4.7",
    "@types/node-uuid": "0.0.28",
    "minify": "2.0.x",
    "node-sass": "^4.8.3",
    "npm-build-tools": "2.2.x",
    "typescript": "^2.7.2",
    "uglify-js": "2.7.x"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "build": "echo Building api... & npm run buildsrc & npm run builddocs & npm run buildstyles & npm run copyconfig",
    "buildsrc": "tsc",
    "builddocs": "n-copy --source docs --destination dist/docs **/* && uglifyjs --compress --output dist/docs/js/scripts.min.js -- node_modules/jquery/dist/jquery.min.js node_modules/jquery-easing/jquery.easing.1.3.js node_modules/bootstrap/dist/js/bootstrap.min.js dist/docs/js/init.js",
    "buildstyles": "n-copy --source node_modules/bootstrap/dist/css --destination dist/docs/css bootstrap.min.css && node-sass dist/docs/css/styles.scss dist/docs/css/styles.css -q && minify dist/docs/css/styles.css > dist/docs/css/styles.min.css",
    "copyconfig": "n-copy --source src --destination dist config.json",
    "copybootstrapcss": "n-copy --source node_modules/bootstrap/dist/css --destination docs/css bootstrap.min.css",
    "postcopybootstrapcss": "npm run compilecss",
    "compilecss": "node-sass docs/css/styles.scss docs/css/styles.css -q",
    "postcompilecss": "npm run minifycss",
    "minifycss": "minify docs/css/styles.css > docs/css/styles.min.css",
    "postminifycss": "npm run bundlejs",
    "bundlejs": "uglifyjs --compress --output docs/js/scripts.min.js -- node_modules/jquery/dist/jquery.min.js node_modules/jquery-easing/jquery.easing.1.3.js node_modules/bootstrap/dist/js/bootstrap.min.js docs/js/init.js",
    "postbuild": "echo Build complete."
  }
}
