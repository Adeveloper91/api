{
  "name": "xbrowsersync-api",
  "description": "The REST API service component of the xBrowserSync application.",
  "version": "1.0.0",
  "author": "xBrowserSync",
  "license": "MIT",
  "main": "api.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/xBrowserSync/API.git"
  },
  "bugs": {
    "url": "https://github.com/xBrowserSync/API/issues"
  },
  "dependencies": {
    "bootstrap": "3.3.x",
    "bunyan": "1.8.x",
    "jquery": "3.1.x",
    "jquery-easing": "0.0.x",
    "mongojs": "2.4.x",
    "node-uuid": "1.4.x",
    "q": "1.4.x",
    "restify": "4.0.x",
    "request": "2.73.x"
  },
  "devDependencies": {
    "jshint": "2.9.x",
    "node-sass": "3.7.x",
    "npm-build-tools": "2.2.x",
    "minify": "2.0.x"
  },
  "engine": "node >= 0.10.45",
  "scripts": {
    "test": "npm run lint",
    "lint": "jshint .",

    "build": "npm run compilecss",
    "compilecss": "node-sass docs/css/styles.scss docs/css/styles.css -q",
    "postcompilecss": "npm run minifycss",
    "minifycss": "minify node_modules/bootstrap/dist/css/bootstrap.min.css docs/css/styles.css > docs/css/styles.min.css",
    "postminifycss": "npm run bundlejs",
    "bundlejs": "minify node_modules/jquery/dist/jquery.min.js node_modules/jquery-easing/jquery.easing.1.3.js node_modules/bootstrap/dist/js/bootstrap.min.js docs/js/init.js > docs/js/scripts.min.js"
  }
}
